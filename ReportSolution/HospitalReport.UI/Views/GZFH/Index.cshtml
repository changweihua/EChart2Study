@{
    ViewBag.Title = "Index";
}

<div style="width: 100%;">
    <div style="width: 100%;background-color:lightblue; margin: 2% 0; height: 35px;">
        <div style="float:right;line-height:35px;padding:0 20px;">
            开始时间：<input type="text" class="datepicker" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" id="dtStart" />
		    结束时间：<input type="text" class="datepicker" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="dtEnd" />
        </div>
    </div>
    <div style="clear: both;">
    </div>
    <div id="main1" class="ec-chart" style="width: 46%; margin: 2% 0; height: 240px;
        float: left;">
    </div>
    <div id="main2" class="ec-chart" style="width: 46%; margin: 2% 0; height: 240px;
        float: left;">
    </div>
    <div style="clear: both;">
    </div>
    <div id="main3" class="ec-chart" style="width: 46%; margin: 2% 0; height: 240px;
        float: left;">
    </div>
    <div id="main4" class="ec-chart" style="width: 46%; margin: 2% 0; height: 240px;
        float: left;">
    </div>
</div>
<script>

    // 使用
    require(
            [
                'echarts',
                'echarts/chart/gauge',
                'echarts/chart/pie'
            ],
            function (ec) {
                // 基于准备好的dom，初始化echarts图表
                var myChart1 = ec.init(document.getElementById('main1'));
                var myChart2 = ec.init(document.getElementById('main2'));
                var myChart3 = ec.init(document.getElementById('main3'));
                var myChart4 = ec.init(document.getElementById('main4'));

                var action1 = function () {
                    doAction('GetData1', myChart1, function (json) {
                        return {
                            title: {
                                text: '(门诊/急诊/体检/留观) 人次',
                                x: 'left'
                            },
                            tooltip: {
                                trigger: 'item',
                                formatter: "{a} <br/>{b} : {c} ({d}%)"
                            },
                            legend: {
                                orient: 'vertical',
                                x: 'right',
                                y: 'center',
                                data: json.legends,
                                formatter: function (name) {
                                    var index = $.inArray(name, json.legends);
                                    return name + '  ' + json.data[index].value + ' 人次';
                                }
                            },
                            series: [{
                                name: '科室设置',
                                type: 'pie',
                                radius: '70%',
                                center: ['35%', '50%'],
                                itemStyle: {
                                    normal: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    },
                                    emphasis: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    }
                                },
                                data: json.data
                            }]
                        };

                    });
                }


                var action2 = function () {
                    doAction('GetData2', myChart2, function (json) {
                        var legends = json.legends;
                        var data = json.data;
                        return {
                            title: {
                                text: '住院患者入/出院人次',
                                x: 'left'
                            },
                            tooltip: {
                                trigger: 'item',
                                formatter: "{a} <br/>{b} : {c} ({d}%)"
                            },
                            legend: {
                                orient: 'vertical',
                                x: 'right',
                                y: 'center',
                                data: json.legends,
                                formatter: function (name) {
                                    var index = $.inArray(name, json.legends);
                                    return name + json.data[index].value + ' 人次';
                                }
                            },
                            series: [{
                                name: '人员配备',
                                type: 'pie',
                                radius: '70%',
                                center: ['35%', '50%'],
                                itemStyle: {
                                    normal: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    },
                                    emphasis: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    }
                                },
                                data: json.data
                            }]

                        }

                    });
                };


                var action3 = function () {
                    doAction('GetData3', myChart3, function (json) {
                        return {
                            title: {
                                text: '出院患者实际占用总床日',
                                x: 'left',
                                y: 'top'
                            },
                            tooltip: {
                                formatter: "{a} <br/>{b} : {c}%"
                            },
                            series: [{
                                name: '出院患者实际占用总床日',
                                type: 'gauge',
                                min: json.min,
                                max: json.max,
                                splitNumber: 5,
                                radius: '70%',
                                center: ['35%', '50%'],
                                axisLine: {
                                    lineStyle: {
                                        width: 3
                                    }
                                },
                                title: {
                                    offsetCenter: [0, '100%'], // x, y，单位px
                                    textStyle: { fontSize: '12', fontWeight: 'bold' }
                                },
                                detail: {
                                    formatter: '{value}',
                                    offsetCenter: [0, '45%'],
                                    textStyle: {
                                        color: 'rgba(0,0,0,1)',
                                        baseline: 'bottom'
                                    }
                                },
                                data: json.data
                            }]
                        };

                    });
                };


                var action4 = function () {
                    doAction('GetData4', myChart4, function (json) {
                        return {
                            title: {
                                text: '(住院/门诊)手术例数',
                                x: 'left'
                            },
                            tooltip: {
                                trigger: 'item',
                                formatter: "{a} <br/>{b} : {c} ({d}%)"
                            },
                            legend: {
                                orient: 'vertical',
                                x: 'right',
                                y: 'center',
                                data: json.legends,
                                formatter: function (name) {
                                    var index = $.inArray(name, json.legends);
                                    return name + json.data[index].value + ' 人次';
                                }
                            },
                            series: [{
                                name: '手术例数',
                                type: 'pie',
                                radius: '70%',
                                center: ['35%', '50%'],
                                itemStyle: {
                                    normal: {
                                        label: {
                                            show: true,
                                            formatter: '{a}: {d}%'
                                        },
                                        labelLine: {
                                            show: true
                                        }
                                    },
                                    emphasis: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    }
                                },
                                data: json.data
                            }]
                        };

                    });
                };


                loadTask.push(action1, action2, action3, action4);
                invokeTask();

            });
</script>
