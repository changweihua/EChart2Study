@{
    ViewBag.Title = "Resource";
}
<h2>
    资源配置</h2>
<div style="width: 100%;">
<div style="width: 100%;background-color:lightblue; margin: 2% 0; height: 35px;">
        <div style="float:right;line-height:35px;padding:0 20px;">
            开始时间：<input type="text" class="datepicker" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" id="dtStart" />
		    结束时间：<input type="text" class="datepicker" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="dtEnd" />
        </div>
    </div>
    <div style="clear: both;">
    </div>
    <div id="main1" class="ec-chart" style="width: 46%; margin: 2% 0; height: 300px;
        float: left;">
    </div>
    <div id="main2" class="ec-chart" style="width: 46%; margin: 2% 0; height: 300px;
        float: left;">
    </div>
    <div style="clear: both;">
    </div>
    <div id="main3" class="ec-chart" style="width: 46%; margin: 2% 0; height: 300px;
        float: left;">
    </div>
    <div id="main4" class="ec-chart" style="width: 46%; margin: 2% 0; height: 300px;
        float: left;">
    </div>
</div>
<script>

    // 使用
    require(
            [
                'echarts',
                'echarts/chart/map',
                'echarts/chart/pie'

            ],
            function (ec) {
                // 基于准备好的dom，初始化echarts图表
                var myChart1 = ec.init(document.getElementById('main1'));
                var myChart2 = ec.init(document.getElementById('main2'));
                var myChart3 = ec.init(document.getElementById('main3'));
                var myChart4 = ec.init(document.getElementById('main4'));

                var action1 = function () {
                    doAction('GetDepartment', myChart1, function (json) {

                        return {
                            title: {
                                text: '科室设置',
                                x: 'left'
                            },
                            tooltip: {
                                trigger: 'item',
                                formatter: "{a} <br/>{b} : {c} ({d}%)"
                            },
                            legend: {
                                orient: 'vertical',
                                x: 'right',
                                y: 'center',
                                data: json.legends,
                                formatter: function (name) {
                                    var index = $.inArray(name, json.legends);
                                    return name + json.data[index].value + '(个)';
                                }
                            },
                            series: [{
                                name: '科室设置',
                                type: 'pie',
                                radius: '70%',
                                center: ['35%', '50%'],
                                itemStyle: {
                                    normal: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    },
                                    emphasis: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    }
                                },
                                data: json.data
                            }]
                        };

                    });

                };

                var action2 = function () {
                    doAction('GetEmployee', myChart2, function (json) {
                        return {
                            title: {
                                text: '人员配备',
                                x: 'left'
                            },
                            tooltip: {
                                trigger: 'item',
                                formatter: "{a} <br/>{b} : {c} ({d}%)"
                            },
                            legend: {
                                orient: 'vertical',
                                x: 'right',
                                y: 'center',
                                data: json.legends,
                                formatter: function (name) {
                                    var index = $.inArray(name, json.legends);
                                    if (index == json.legends.length - 1) {
                                        return name + json.total + ' 人 100%';
                                    }
                                    return name + json.data[index].value + ' 人 ' + (json.data[index].value / json.total * 100).toFixed(2) + '%';
                                }
                            },
                            series: [{
                                name: '人员配备',
                                type: 'pie',
                                radius: '70%',
                                center: ['35%', '50%'],
                                itemStyle: {
                                    normal: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    },
                                    emphasis: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    }
                                },
                                data: json.data
                            }]

                        }

                    });
                };

                var action3 = function () {
                    doAction('GetBed', myChart3, function (json) {
                        return {
                            title: {
                                text: '床位配备',
                                x: 'left'
                            },
                            tooltip: {
                                trigger: 'item',
                                formatter: "{a} <br/>{b} : {c} ({d}%)"
                            },
                            legend: {
                                orient: 'vertical',
                                x: 'right',
                                y: 'center',
                                data: json.legends,
                                formatter: function (name) {
                                    var index = $.inArray(name, json.legends);
                                    if (index == json.legends.length - 1) {
                                        return name + json.total + ' 人 100%';
                                    }
                                    return name + json.data[index].value + ' 人 ' + (json.data[index].value / json.total * 100).toFixed(2) + '%';
                                }
                            },
                            series: [{
                                name: '床位配备',
                                type: 'pie',
                                radius: '70%',
                                center: ['35%', '50%'],
                                itemStyle: {
                                    normal: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    },
                                    emphasis: {
                                        label: {
                                            show: false
                                        },
                                        labelLine: {
                                            show: false
                                        }
                                    }
                                },
                                data: json.data
                            }]

                        }

                    });
                }


                var action4 = function () {
                    // 自定义扩展图表类型：mapType = Hospital
                    require('echarts/util/mapData/params').params.Hospital = {
                        getGeoJson: function (callback) {
                            $.ajax({
                                url: "/Content/svgs/Hospital.svg",
                                dataType: 'xml',
                                success: function (xml) {
                                    callback(xml)
                                }
                            });
                        }
                    }

                    var option = {
                        title: {
                            text: '建筑面积',
                            x: 'left'
                        },
                        tooltip: {
                            show: 'false'
                        },
                        toolbox: {
                            show: true,
                            orient: 'vertical',
                            x: 'right',
                            y: 'center',
                            feature: {
                                mark: { show: true },
                                restore: { show: true },
                                saveAsImage: { show: true }
                            }
                        },
                        dataRange: {
                            min: 0,
                            max: 90,
                            x: 'left',
                            y: 'bottom',
                            tdext: ['High', 'Low'],
                            calculable: true,
                            color: ['orangered', 'yellow', 'lightskyblue']
                        },
                        series: [
                        {
                            name: '人体密码-男',
                            type: 'map',
                            mapType: 'Hospital', // 自定义扩展图表类型
                            mapLocation: {
                                x: 'center'
                            },
                            roam: false,
                            itemStyle: {
                                normal: { label: { show: false} },
                                emphasis: { label: { show: false} }
                            },
                            data: [

                            ],
                            textFixed: {
                                '上肢': [-60, 0]
                            },
                            markPoint: {
                                symbol: 'arrow',
                                symbolSize: 10,
                                effect: {
                                    show: true
                                },
                                data: [
                                    { name: '心脏', value: 100, geoCoord: [138, 126] }
                                ]
                            }
                        }
                    ]
                    };

                    // 为echarts对象加载数据 
                    myChart4.setOption(option);
                };

                loadTask.push(action1, action2, action3, action4);
                invokeTask();

            });
</script>
